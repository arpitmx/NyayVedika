<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segment_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_box_size"
            android:orientation="vertical"
    android:background="@color/white"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1DE3E1E1"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />



    <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="8dp"
    >

 <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:background="@drawable/input_box_bg"
            >


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_voice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_voice_24"
        android:scaleX="1"
        android:scaleY="1"
        android:tint="@color/colorPrimary"

        />


     <EditText
         android:id="@+id/editbox_message"
         style="@style/body_regular"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="7"
         android:hint="Message"
         android:gravity="center_vertical"
         android:paddingStart="10dp"
         android:paddingEnd="10dp"
         android:background="@null"
         android:textColor="@color/black"
         android:textSize="16dp"
         android:textColorHint="@color/black_overlay"

         />



     <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_file_attach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/baseline_attach_file_24"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_marginEnd="10dp"
            app:tint="@color/account"

            />



</androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/arrow_circle_right"
                android:scaleX="2"
                android:scaleY="2"
                android:tint="@color/account"
                />

</androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>

